<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <!-- Coins -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/coin"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/coinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins: 0"
            android:textSize="22sp"
            android:textColor="#f1f1f1f1"
            android:textStyle="bold"
            android:fontFamily="@font/pixelated_font"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />
    </LinearLayout>

    <!-- Hunger -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/hunger"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/hungerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hunger: 100"
            android:textSize="22sp"
            android:textColor="#f1f1f1f1"
            android:textStyle="bold"
            android:fontFamily="@font/pixelated_font"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />
    </LinearLayout>

    <!-- Thirst -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/thirst"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/thirstTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thirst: 100"
            android:textSize="22sp"
            android:textColor="#f1f1f1f1"
            android:textStyle="bold"
            android:fontFamily="@font/pixelated_font"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />
    </LinearLayout>

    <!-- Damage Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/weapon"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/damageIndicatorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damage: 10"
            android:textSize="22sp"
            android:textColor="#f1f1f1f1"
            android:textStyle="bold"
            android:fontFamily="@font/pixelated_font"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />
    </LinearLayout>

    <!-- Shop Items List -->
    <ListView
        android:id="@+id/shopListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="#f1f1f1f1"
        android:fontFamily="@font/pixelated_font"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

</LinearLayout>
